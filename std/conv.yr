
def toString (c : char) : string 
    return cast:string ([c]);

def toString (a : ptr!char) : string {
    if (a is null) return '';
    else if (*a == 0ub) return ''; 
    let ret = [*a];
    a = a + 1;
    while (*a != 0ub) {
	ret += [*a];
	a = a + 1;
    }
    return cast:string (ret);
}

def to if (is (T : string))
    (T) (elem : [char]) : string {
	return cast:string (elem);
    }


